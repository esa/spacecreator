{
    "version": 1,
    "kind": "project",
    "supportedProjectTypes": [ "Qt4ProjectManager.Qt4Project" ],
    "id": "S.DeviceGenerator Project",
    "category": "I.Projects",
    "trDescription": "Create Communication Device project.",
    "trDisplayName": "Communication Device Project",
    "trDisplayCategory": "Non-Qt Project",
    "enabled": true,

    "options":[
        { "key": "ProFile", "value": "%{JS: Util.fileName('%{ProjectName}', 'pro')}" },
        { "key": "ProFileShared", "value": "%{JS: Util.fileName('%{ProjectName}', 'pro.shared')}" },
        { "key": "AsnFile", "value": "%{JS: Util.fileName('%{ProjectName}', 'asn')}" },
        { "key": "AcnFile", "value": "%{JS: Util.fileName('%{ProjectName}', 'acn')}" },
        { "key": "IVFile", "value": "interfaceview.xml" },
        { "key": "Model", "value": "%{JS: '%{ProjectName}'.toUpperCase()}" },
        { "key": "IVAsnFile", "value": " asn1file=\"%{AsnFile}\"" }
    ],

    "pages":[
        {
            "trDisplayName": "Project Location",
            "trShortTitle": "Location",
            "typeId": "Project"
        },
        {
            "trDisplayName": "Project Initialization",
            "trShortTitle": "Project Initialization",
            "typeId": "Fields",
            "enabled": true,
            "data":[
                {
                    "name": "IVFileSource",
                    "trDisplayName": "Interface View template:",
                    "type": "ComboBox",
                    "data":
                    {
                        "index": 0,
                        "items":[
                            {
                                "trKey": "empty",
                                "value": "empty"
                            },
                            {
                                "trKey": "example",
                                "value": "example"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "trDisplayName": "Kit Selection",
            "trShortTitle": "Kits",
            "typeId": "Kits",
            "enabled": true,
            "data": { "projectFilePath": "%{ProFile}" }
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],

    "generators":[
        {
            "typeId": "File",
            "data":[
                {
                    "source": "file.pro",
                    "target": "%{ProjectDirectory}/%{ProFile}",
                    "openAsProject": true
                },
                {
                    "source": "build_settings.xml",
                    "target": "%{ProjectDirectory}/%{ProFileShared}"
                },
                {
                    "source": "taste.pro",
                    "target": "%{ProjectDirectory}/work/taste.pro"
                },
                {
                    "source": "template.asn",
                    "target": "%{ProjectDirectory}/%{AsnFile}",
                    "openInEditor": true
                },
                {
                    "source": "template.acn",
                    "target": "%{ProjectDirectory}/%{AcnFile}",
                    "openInEditor": true
                },
                {
                    "source": "%{IVFileSource}_template.xml",
                    "target": "%{ProjectDirectory}/%{IVFile}",
                    "openInEditor": true
                },
                {
                    "source": "Makefile",
                    "target": "%{ProjectDirectory}/Makefile"
                }
            ]
        }
    ]
}