/* CIF PROCESS (250, 150), (150, 75) */
process Sensor;
    /* CIF TEXT (579, 12), (170, 140) */
    DCL x T_float := 0.0;
    /* CIF ENDTEXT */
    /* CIF START (320, 10), (70, 35) */
    START;
        /* CIF NEXTSTATE (320, 60), (70, 35) */
        NEXTSTATE Wait;
    /* CIF state (450, 10), (70, 35) */
    state Wait;
        /* CIF input (450, 65), (70, 35) */
        input trigger;
            /* CIF task (443, 120), (83, 35) */
            task x := x + 1.0;
            /* CIF decision (450, 175), (70, 50) */
            decision x > 10.0;
                /* CIF ANSWER (405, 245), (70, 23) */
                (true):
                    /* CIF task (405, 288), (70, 35) */
                    task x := 0.0;
                /* CIF ANSWER (495, 245), (70, 23) */
                (false):
            enddecision;
            /* CIF output (443, 339), (83, 35) */
            output reading(x);
            /* CIF NEXTSTATE (450, 394), (70, 35) */
            NEXTSTATE -;
    endstate;
endprocess Sensor;