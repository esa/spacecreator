system observerdemo;
    /* CIF TEXT (144, 214), (462, 140) */
    use datamodel comment 'observer.asn';
    
    signal ctrl_sig(T_integer) renames input ctrl to Actuator;
    signal feedback_sig(T_integer) renames input feedback to ModeManager;
    /* CIF ENDTEXT */
    channel c
        from env to observerdemo with ctrl_sig, feedback_sig;
    endchannel;
    block observerdemo;
        signalroute r
            from env to observerdemo with ctrl_sig, feedback_sig;
        connect c and r;
        /* CIF PROCESS (259, 87), (150, 75) */
        process observerdemo;
            /* CIF TEXT (0, 57), (222, 140) */
            monitor st System_State;
            
            monitor event Observable_Event;
            
            errorstates IncorrectValue;
            
            DCL reference T_integer;
            /* CIF ENDTEXT */
            /* CIF START (320, 72), (70, 35) */
            START;
                /* CIF NEXTSTATE (320, 127), (70, 35) */
                NEXTSTATE Idle;
            /* CIF state (588, 72), (76, 35) */
            state Checking;
                /* CIF input (569, 127), (115, 35) */
                input feedback_sig(y);
                    /* CIF decision (576, 182), (100, 50) */
                    decision y = reference;
                        /* CIF ANSWER (637, 252), (70, 23) */
                        (false):
                            /* CIF NEXTSTATE (617, 295), (109, 35) */
                            NEXTSTATE IncorrectValue;
                        /* CIF ANSWER (536, 252), (70, 23) */
                        (true):
                            /* CIF NEXTSTATE (536, 295), (70, 35) */
                            NEXTSTATE Idle;
                    enddecision;
            endstate;
            /* CIF state (447, 69), (70, 35) */
            state Idle;
                /* CIF input (441, 124), (80, 35) */
                input ctrl_sig(x);
                    /* CIF task (430, 179), (103, 35) */
                    task reference := x;
                    /* CIF NEXTSTATE (443, 229), (76, 35) */
                    NEXTSTATE Checking;
            endstate;
            /* CIF state (711, 73), (107, 35) */
            state Incorrectvalue;
            endstate;
        endprocess observerdemo;
    endblock;
endsystem;