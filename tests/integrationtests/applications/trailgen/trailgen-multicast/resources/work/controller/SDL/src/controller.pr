                    /* CIF NEXTSTATE (1137, 731), (70, 35) */
                    NEXTSTATE Wait;
                /* CIF ANSWER (1271, 633), (81, 23) */
                (Actuator2):
                    /* CIF task (1247, 676), (128, 35) */
                    task act2_received := 2;
                    /* CIF NEXTSTATE (1277, 726), (70, 35) */
                    NEXTSTATE Wait;
                /* CIF ANSWER (1387, 633), (70, 23) */
                else:
                    /* CIF NEXTSTATE (1387, 676), (70, 35) */
                    NEXTSTATE Wait;
            enddecision;
