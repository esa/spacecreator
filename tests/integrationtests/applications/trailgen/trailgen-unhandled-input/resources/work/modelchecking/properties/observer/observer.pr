            START;
                /* CIF NEXTSTATE (478, 249), (70, 35) */
                NEXTSTATE Idle;
            /* CIF state (291, 191), (70, 35) */
            state Idle;
                /* CIF input (273, 246), (105, 35) */
                input loss_detected;
                    /* CIF NEXTSTATE (291, 301), (70, 35) */
                    NEXTSTATE error;
            endstate;
            /* CIF state (677, 69), (70, 35) */
            state error;
            endstate;
        endprocess observer;
